<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GQuishpeS3.Views.vTres"
             Title="vTres">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="25"></Setter>
            <Setter Property="TextColor" Value="Blue"></Setter>
        </Style>
        <Style TargetType="Entry" >
            <Setter Property="BackgroundColor" Value="Black" ></Setter>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            Text="Vista 3:Guardar Usuario"
            VerticalOptions="Center" 
            FontSize="20"
            HorizontalOptions="Center" />
        <Entry x:Name="txtUsuario"
           Placeholder="Ingresa el Usuario"></Entry>
        <Entry x:Name="txtPass"
          Placeholder="Ingrese contraseÃ±a"></Entry>
        <Button x:Name="btnGuardar"
                Text="Guardar"
            Clicked="btnGuardar_Clicked"
            ></Button>

    </VerticalStackLayout>
</ContentPage>